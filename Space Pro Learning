        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            loadUserProgress();
            updateProgressDisplay();
            loadCurrentQuiz();
            
            // Event listeners
            document.getElementById('loginBtn').addEventListener('click', () => {
                document.getElementById('loginModal').classList.remove('hidden');
            });
            
            document.getElementById('closeModal').addEventListener('click', () => {
                document.getElementById('loginModal').classList.add('hidden');
            });
            
            document.getElementById('teacherLogin').addEventListener('click', () => {
                login('teacher');
            });
            
            document.getElementById('studentLogin').addEventListener('click', () => {
                login('student');
            });
            
            document.getElementById('logoutBtn').addEventListener('click', logout);
            
            document.getElementById('closeMissionModal').addEventListener('click', () => {
                document.getElementById('missionModal').classList.add('hidden');
            });
            
            document.getElementById('nextMissionStep').addEventListener('click', nextMissionStep);
            document.getElementById('prevMissionStep').addEventListener('click', prevMissionStep);
        });

        // User management
        function login(userType) {
            currentUser = {
                type: userType,
                name: userType === 'teacher' ? 'Ms. Johnson' : 'Alex Student'
            };
            
            document.getElementById('loginModal').classList.add('hidden');
            document.getElementById('loginBtn').classList.add('hidden');
            document.getElementById('userInfo').classList.remove('hidden');
            document.getElementById('userName').textContent = currentUser.name;
            
            if (userType === 'teacher') {
                document.getElementById('teacherDashboard').classList.remove('hidden');
            }
            
            saveUserProgress();
        }

        function logout() {
            currentUser = null;
            document.getElementById('loginBtn').classList.remove('hidden');
            document.getElementById('userInfo').classList.add('hidden');
            document.getElementById('teacherDashboard').classList.add('hidden');
        }

        // Progress management
        function loadUserProgress() {
            const saved = localStorage.getItem('spaceEducationProgress');
            if (saved) {
                userProgress = JSON.parse(saved);
            }
        }

        function saveUserProgress() {
            localStorage.setItem('spaceEducationProgress', JSON.stringify(userProgress));
        }

        function updateProgressDisplay() {
            document.getElementById('missionsCompleted').textContent = `${userProgress.missionsCompleted}/4`;
            document.getElementById('missionProgress').style.width = `${(userProgress.missionsCompleted / 4) * 100}%`;
            document.getElementById('quizScore').textContent = `${userProgress.quizScore}%`;
            document.getElementById('scoreProgress').style.width = `${userProgress.quizScore}%`;
            document.getElementById('totalPoints').textContent = userProgress.totalPoints;
        }

        // Quiz functionality
        function loadCurrentQuiz() {
            const quiz = quizQuestions[currentQuizIndex];
            document.getElementById('quizQuestion').textContent = quiz.question;
            
            const options = document.querySelectorAll('.quiz-option');
            options.forEach((option, index) => {
                option.textContent = quiz.options[index];
                option.classList.remove('bg-green-600', 'bg-red-600', 'bg-gray-700');
                option.classList.add('bg-gray-700');
                option.disabled = false;
            });
            
            document.getElementById('nextQuizBtn').classList.add('hidden');
        }

        function selectAnswer(button, isCorrect) {
            const options = document.querySelectorAll('.quiz-option');
            options.forEach(option => option.disabled = true);
            
            if (isCorrect) {
                button.classList.remove('bg-gray-700');
                button.classList.add('bg-green-600');
                userProgress.totalPoints += 10;
                
                // Update quiz score
                const correctAnswers = Math.floor(userProgress.totalPoints / 10);
                const totalQuestions = currentQuizIndex + 1;
                userProgress.quizScore = Math.round((correctAnswers / Math.max(totalQuestions, 5)) * 100);
            } else {
                button.classList.remove('bg-gray-700');
                button.classList.add('bg-red-600');
                
                // Show correct answer
                const quiz = quizQuestions[currentQuizIndex];
                options[quiz.correct].classList.remove('bg-gray-700');
                options[quiz.correct].classList.add('bg-green-600');
            }
            
            document.getElementById('nextQuizBtn').classList.remove('hidden');
            updateProgressDisplay();
            saveUserProgress();
        }

        function nextQuiz() {
            currentQuizIndex = (currentQuizIndex + 1) % quizQuestions.length;
            loadCurrentQuiz();
        }

        // Mission functionality
        function startMission(missionId) {
            currentMission = missionId;
            currentMissionStep = 0;
            
            const mission = missions[missionId];
            document.getElementById('missionTitle').textContent = `Mission: ${mission.title}`;
            document.getElementById('missionModal').classList.remove('hidden');
            
            loadMissionStep();
        }

        function loadMissionStep() {
            const mission = missions[currentMission];
            const step = mission.steps[currentMissionStep];
            
            document.getElementById('missionContent').innerHTML = step.content;
            
            // Update navigation buttons
            const prevBtn = document.getElementById('prevMissionStep');
            const nextBtn = document.getElementById('nextMissionStep');
            
            if (currentMissionStep === 0) {
                prevBtn.classList.add('hidden');
            } else {
                prevBtn.classList.remove('hidden');
            }
            
            if (currentMissionStep === mission.steps.length - 1) {
                nextBtn.textContent = 'Complete Mission';
            } else {
                nextBtn.textContent = 'Next Step';
            }
        }

        function nextMissionStep() {
            const mission = missions[currentMission];
            
            if (currentMissionStep === mission.steps.length - 1) {
                // Complete mission
                if (!userProgress.completedMissions.includes(currentMission)) {
                    userProgress.completedMissions.push(currentMission);
                    userProgress.missionsCompleted++;
                    
                    // Award points based on mission
                    const points = {
                        mars: 100,
                        jupiter: 150,
                        earth: 75,
                        sun: 125
                    };
                    userProgress.totalPoints += points[currentMission] || 100;
                }
                
                updateProgressDisplay();
                saveUserProgress();
                document.getElementById('missionModal').classList.add('hidden');
            } else {
                currentMissionStep++;
                loadMissionStep();
            }
        }

        function prevMissionStep() {
            if (currentMissionStep > 0) {
                currentMissionStep--;
                loadMissionStep();
            }
        }
    </script>
